<% include ../partials/header %>

<div class='container'>
  <div class='row'>
    <h1 style='text-align: center'>Add Campground</h1>
    <div style='width: 30%; margin: 2rem auto;'>
      <form action='/campgrounds' method='POST'>
        <div class='form-group'>
          <input class='form-control' name='newName' type='text' placeholder='Name'>
        </div>
        <div class='form-group'>
          <input class='form-control' name='newPrice' type='number' placeholder='Price per Night' min='0.01' step='0.01'>
        </div>
        <div class='form-group'>
          <input class='form-control' name='newImage' type='text' placeholder='Image URL'>
        </div>
        <div class='form-group'>
          <input class='form-control' name='description' type='text' placeholder='Description'>
        </div>
        <div class='form-group'>
          <input class='btn btn-lg btn-primary' type='submit'>
        </div>
      </form>
      <a href='/campgrounds'>Campgrounds</a>
    </div>
  </div>
</div>

<% include ../partials/footer %>